<!DOCTYPE html>
<html>
  <head>
      <title>Dr Diary</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <% if (user) { %>
      <a href="/logout">Log Out</a>
      <h1>Account</h1>
      <h3>Name:</h3>
      <%= user.name %>
      <h3>Email:</h3>
      <%= user.email %>
      <% if (!user.isDoctor) { %>
        <form action="/updateProfile" method="POST">
          <label>Are you a doctor?</label>
          <input name="isDoctor" type="checkbox" value=true required>
          <input type="submit" value="Submit">
        </form>
        <a href="/patient">Patient Profile</a>
      <% } else { %>
        <a href="/doctor">Doctor Profile</a>
      <% } %>
    <% } else { %>
      <a href="/auth/google">Login with Google</a>
      <p>Not Logged In</p>
    <% } %>
  </body>
</html>
